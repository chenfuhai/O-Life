 <LinearLayout 
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:orientation="vertical"
      android:gravity="center_horizontal"
      android:background="@color/yellow"
>
  <LinearLayout 
      android:id="@+id/loginLinearLayout01" 
      android:layout_width="wrap_content" 
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="30dip"
      android:gravity="center"
>
    <TextView 
      android:text="用户名"
      android:layout_marginLeft="11dip"
      android:textSize="20dip" 
      android:id="@+id/loginTextView01" 
      android:layout_width="wrap_content" 
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:textColor="#000000">
    </TextView>
    <EditText 
      android:text="" 
      android:id="@+id/loginEditText01" 
      android:layout_width="wrap_content" 
      android:layout_height="wrap_content"
      android:width="180dip"
      android:textColor="#000000">
    </EditText>
  </LinearLayout>
  <LinearLayout 
      android:id="@+id/loginLinearLayout02" 
      android:layout_width="wrap_content" 
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center">
    <TextView 
       android:text="密    码" 
       android:textSize="20dip" 
       android:id="@+id/loginTextView02" 
       android:layout_marginLeft="11dip"
       android:layout_width="wrap_content" 
       android:layout_height="wrap_content"
       android:gravity="center_horizontal"
       android:textColor="#000000">
    </TextView>
    <EditText 
       android:text="" 
       android:id="@+id/loginEditText02" 
       android:layout_width="wrap_content" 
       android:layout_height="wrap_content"
       android:password="true"
       android:width="180dip">
    </EditText>
   </LinearLayout>
   <AbsoluteLayout
       android:id="@+id/loginLinearLayout03"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

    <Button
        android:id="@+id/loginButton02"
        android:layout_width="wrap_content"
        android:layout_height="45dip"
        android:layout_x="181dp"
        android:layout_y="-1dp"
        android:gravity="right"
        android:text="取消"
        android:textSize="20dip" />

    <Button
        android:id="@+id/loginButton01"
        android:layout_width="wrap_content"
        android:layout_height="45dip"
        android:layout_x="88dp"
        android:layout_y="0dp"
        android:gravity="left"
        android:text="登录"
        android:textSize="20dip" />

   </AbsoluteLayout>
  
   <LinearLayout 
   android:layout_marginTop="30dip"
   android:layout_marginLeft="7dip"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
   </LinearLayout>

</LinearLayout>
</LinearLayout>
