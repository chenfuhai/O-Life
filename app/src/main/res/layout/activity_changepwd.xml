<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    android:orientation="vertical" >


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_blue_deep"
        android:minHeight="?attr/actionBarSize"
        xmlns:toolbar="http://schemas.android.com/apk/res-auto"
        toolbar:theme="@style/Theme.ToolBar.Base"

        android:id="@+id/toolbar" />

    <!-- 编辑框 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textBlack"
            android:text="温馨提示：短信注册的默认密码是123456"/>
    </LinearLayout>
    <!-- 编辑框 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/lineatrlayout_radius_border"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <EditText
                android:id="@+id/changepwd_et_oldpwd"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:hint="在此输入旧密码"
                android:inputType="textPassword"
                android:padding="0dp"
                android:scrollbars="vertical"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
    <!-- 编辑框 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/lineatrlayout_radius_border"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <EditText
                android:id="@+id/changepwd_et_newpwd"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:hint="在此输入新密码"
                android:inputType="textPassword"
                android:padding="0dp"
                android:scrollbars="vertical"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 编辑框 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/lineatrlayout_radius_border"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <EditText
                android:id="@+id/changepwd_et_renewpwd"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                android:background="@null"
                android:hint="重复您的密码"
                android:inputType="textPassword"
                android:padding="0dp"
                android:scrollbars="vertical"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>


    <!-- 确认按钮和放弃按钮 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >



        <Button
            android:id="@+id/btnComfirm"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10px"
            android:layout_weight="1"
            android:background="@drawable/btn_radius_blue_bg"
            android:text="完成"
            android:textColor="#fff" />
    </LinearLayout>



</LinearLayout>